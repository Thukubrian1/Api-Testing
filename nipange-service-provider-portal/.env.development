# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8082
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
VITE_GOOGLE_CLIENT_ID=871847115632-nhpmo5hr1v71v69qmshoi24iacpjdk50.apps.googleusercontent.com
VITE_GOOGLE_CLIENT_NAME=nipange-service-provider-portal
VITE_GOOGLE_REDIRECT_URI=http://localhost:8082/v1/auth/google-callback
VITE_AUTH_TOKEN_KEY=Nipange-service-provider-auth
VITE_SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
VITE_APP_NAME=nnipange-service-provider-portal
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:5175

# -----------------------------------------------------------------------------
# FEATURE FLAGS - Enable all features in development
# -----------------------------------------------------------------------------
VITE_FEATURE_GOOGLE_AUTH=true
VITE_FEATURE_TWO_FACTOR_AUTH=false
VITE_FEATURE_EMAIL_VERIFICATION=true
VITE_FEATURE_PHONE_VERIFICATION=false
VITE_FEATURE_ANALYTICS=false

# -----------------------------------------------------------------------------
# FILE UPLOAD LIMITS
# -----------------------------------------------------------------------------
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# -----------------------------------------------------------------------------
# PAGINATION & DATA LIMITS
# -----------------------------------------------------------------------------
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# UI/UX SETTINGS
# -----------------------------------------------------------------------------
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LOCALE=en-US
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=12h

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS - Enabled in development
# -----------------------------------------------------------------------------
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_LOGGING=true
VITE_USE_MOCK_API=false

# -----------------------------------------------------------------------------
# RATE LIMITING & SECURITY
# -----------------------------------------------------------------------------
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBERS=true
VITE_PASSWORD_REQUIRE_SPECIAL_CHARS=false