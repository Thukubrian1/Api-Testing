# -----------------------------------------------------------------------------
# FILE UPLOAD LIMITS
# -----------------------------------------------------------------------------
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# -----------------------------------------------------------------------------
# PAGINATION & DATA LIMITS
# -----------------------------------------------------------------------------
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# UI/UX SETTINGS
# -----------------------------------------------------------------------------
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LOCALE=en-US
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=12h

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS - Disabled in production
# -----------------------------------------------------------------------------
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_ENABLE_LOGGING=false
VITE_USE_MOCK_API=false

# -----------------------------------------------------------------------------
# RATE LIMITING & SECURITY
# -----------------------------------------------------------------------------
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=8
VITE_PASSWORD_REQUIRE_UPPERCASE=true
VITE_PASSWORD_REQUIRE_LOWERCASE=true
VITE_PASSWORD_REQUIRE_NUMBERS=true
VITE_PASSWORD_REQUIRE_SPECIAL_CHARS=true